@using CMS;
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IHtmlLocalizer<SharedResource> Localizer


@{
    ViewData["Title"] = "Divisions";





    List<Article> divisions = new List<Article>();
    divisions = ViewBag.divisions;
    if (ViewBag.divisions != null)
    {
        divisions = ViewBag.divisions;
    }





    ArticleType articleType = new ArticleType();
    
    if (ViewBag.TitleDivisions != null)
    {
        articleType = ViewBag.TitleDivisions;
    }



}


<div id="fsPageWrapper pt-10">





    <header id="fsHeader" class="fsHeader">
        <div id="modal" class="modal">
            <span id="modal-close" class="modal-close">×</span>
            <img id="modal-content" class="modal-content">
            <div id="modal-caption" class="modal-caption"></div>
        </div>


        <div class=" fsBanner fsStyleAutoclear" id="fsEl_105048" data-settings-id="104258" data-use-new="true">

            <div class="fsElement fsContainer hero-combo hero-offset hero-green-grey hero-texture" id="fsEl_117208" style="    min-height: 50vh;
    background-position: center top;
background-image:url('/@(articleType.FullImagePath)_1920x1080.webp')" data-use-new="true" has-breadcrumbs="" has-content="" columns="" resource="" updated="">

                <div class="fsElementContent" dir="rtl">
                    <div class="fsElement fsNavigation fsBreadcrumb" id="fsEl_117209" data-use-new="true">

                        <div class="fsElementContent">
                            <nav aria-label="breadcrumbs">
                                <ul>
                                    <li aria-current="location">
                                        <a href="@(ViewBag.Theme == "ar"? "/ar":"/en")/Home/Index">@Localizer["Home"]</a> <span aria-hidden="true" class="fsNavBreadcrumbSeperator">&gt;</span>
                                    </li>
                                    <li>
                                      @articleType.Name
                                    </li>
                                    @*                                                    <li>
                                    <a href="../school-websites.html">School Websites</a> <span aria-hidden="true" class="fsNavBreadcrumbSeperator">&gt;</span>
                                    </li>*@


                                </ul>
                            </nav>

                        </div>


                    </div>
                    <div class="fsElement fsLayout fsTwoColumnLayout fsStyleAutoclear" id="fsEl_117210" data-use-new="true">

                        <div class=" fsDiv fsStyleColumn fsStyleColumn-1 fsStyleAutoclear" id="fsEl_117211">

                            <div class="fsElement fsContent" id="fsEl_117212" data-use-new="true">

                                <div class="fsElementContent">
                                    <h1>@articleType.Name</h1>
                                    <span class="fs_style_96">@Html.Raw(articleType.Description)</span>

                                </div>
                                @*
                                <footer>
                                    <div class="fsElementFooterContent">
                                        <p>

                                            <a class="fs_style_104 fs_style_101" href="/Home/Divisions#divisions">
                                                @articleType.Name
                                            </a>
                                        </p>

                                    </div>
                                </footer>
                                *@

                            </div>




                        </div>
                        <div class=" fsDiv fsStyleColumn fsStyleColumn-2 fsStyleColumn-last fsStyleAutoclear" id="fsEl_117213">

                            <div class="fsElement fsResourceElement fsSingleItem resource-shadow" id="fsEl_117214" data-use-new="true" data-source-element-id="117214" data-source-page-id="6977">

                                <div class="fsElementContent">
                                    <article class="fsResource fsResourceTypeImage d-none" style="display:none"><figure><picture><img alt="" data-aspect-ratio="0.6432291666666666" style="" src="/@(articleType.FullImagePath)_800x500.webp"></picture></figure></article>
                                </div>


                            </div>




                        </div>





                    </div>



                </div>


            </div>



        </div>


    </header>

    <div id="fsPageBodyWrapper" class="fsPageBodyWrapper">
        <div id="fsPageBody" class="fsStyleAutoclear fsPageBody">

            <main id="fsPageContent" class="fsPageContent" style="outline:none;">




                <div class="fsPageLayout fsLayout fsOneColumnLayout fsStyleAutoclear" id="fsEl_106190" data-use-new="true">

                    <div class=" fsDiv fsStyleAutoclear" id="fsEl_106191">


                        <div class="fsElement fsContent" id="fsEl_123221" data-use-new="true">



                        </div>


                        <div class="fsElement fsContainer panel-full-width panel-wide-boundary pb-70px" id="fsEl_131695" data-use-new="true">

                            <div class="fsElementContent d-flex  mt-70px mb-70px">
                                <div class="fsStyleTwoThirds " >
                                    <h1>@articleType.Name</h1>
                                    <span class="fs_style_96">
                                        @Html.Raw(articleType.Description)
                                    </span>
                                </div>
                            </div>

                        </div>



                        @{
                            var counter = 1;
                        }
                        @foreach (var item in divisions)
                        {
                            if (counter % 2 == 0)
                            {
                                <div class="fsElement fsContainer panel-full-width panel-wide-boundary pb-70px" id="fsEl_131677@(item.ID)" data-use-new="true">

                                    <div class="fsElementContent">
                                        <div class="fsElement fsLayout fsTwoColumnWideRightLayout resource-duo fsStyleAutoclear" id="fsEl_131678@(item.ID)" data-use-new="true" style="display: flex; flex-direction: row-reverse;">

                                            <div class=" fsDiv fsStyleOneThird fsStyleColumn fsStyleColumn-1 fsStyleAutoclear paragraph-padding-right" id="fsEl_131679@(item.ID)">
                                                <div class="fsElement fsContent" id="fsEl_131710@(item.ID)" data-use-new="true">

                                                    <div class="fsElementContent" dir="rtl">
                                                        <h3>@item.Name</h3>

                                                        <p>
                                                            @Html.Raw(item.Description)
                                                        </p>
                                                        <p><a class="fs_style_100" href="@(ViewBag.Theme == "ar"? "/ar":"/en")/Home/Grade/@(item.SEOPath)">@Localizer["MoreDetails"]</a></p>



                                                    </div>


                                                </div>





                                            </div>
                                            <div class=" fsDiv fsStyleTwoThirds fsStyleColumn fsStyleColumn-2 fsStyleColumn-last fsStyleAutoclear" id="fsEl_131681@(item.ID)">

                                                <div class="fsElement fsResourceElement fsSingleItem resource-shadow" id="fsEl_131682@(item.ID)" data-use-new="true" data-source-element-id="131682@(item.ID)" data-source-page-id="7030@(item.ID)">

                                                    <div class="fsElementContent">
                                                        <article class="fsResource fsResourceTypeImage"><figure><picture><img alt="" data-aspect-ratio="0.6666666666666666" style="" src="/@(item.FullImagePath)_450x450.webp"></picture></figure></article>
                                                    </div>


                                                </div>




                                            </div>





                                        </div>



                                    </div>


                                </div>
                            }

                            else
                            {
                                <div class="fsElement fsContainer panel-full-width panel-wide-boundary pb-70px" id="fsEl_131677@(item.ID)" data-use-new="true">

                                    <div class="fsElementContent">
                                        <div class="fsElement fsLayout fsTwoColumnWideRightLayout resource-duo fsStyleAutoclear" id="fsEl_131678@(item.ID)" data-use-new="true" >

                                            <div class=" fsDiv fsStyleOneThird fsStyleColumn fsStyleColumn-1 fsStyleAutoclear paragraph-padding-right" id="fsEl_131679@(item.ID)">
                                                <div class="fsElement fsContent" id="fsEl_131710@(item.ID)" data-use-new="true">

                                                    <div class="fsElementContent" dir="rtl">
                                                        <h3>@item.Name</h3>

                                                        <p>
                                                            @Html.Raw(item.Description)
                                                        </p>
                                                        <p><a class="fs_style_100" href="@(ViewBag.Theme == "ar"? "/ar":"/en")/Home/Grade/@(item.SEOPath)">@Localizer["MoreDetails"]</a></p>



                                                    </div>


                                                </div>





                                            </div>
                                            <div class=" fsDiv fsStyleTwoThirds fsStyleColumn fsStyleColumn-2 fsStyleColumn-last fsStyleAutoclear" id="fsEl_131681@(item.ID)">

                                                <div class="fsElement fsResourceElement fsSingleItem resource-shadow" id="fsEl_131682@(item.ID)" data-use-new="true" data-source-element-id="131682@(item.ID)" data-source-page-id="7030@(item.ID)">

                                                    <div class="fsElementContent">
                                                        <article class="fsResource fsResourceTypeImage"><figure><picture><img alt="" data-aspect-ratio="0.6666666666666666" style="" src="/@(item.FullImagePath)_600x600.webp"></picture></figure></article>
                                                    </div>


                                                </div>




                                            </div>





                                        </div>



                                    </div>


                                </div>
                            }
                            counter++;

                             }
                    </div>




                </div>



            </main>
        </div>
    </div>







</div>